{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("wideweb\\socialmediaposts\\assetbundles\\socialmediaposts\\SocialMediaPostsAsset") %}

{{ forms.textField({
    label: 'App Id For Facebook',
    instructions: 'Enter App Id from Facebook',
    id: 'appIdFb',
    name: 'appIdFb',
    value: settings['appIdFb']})
}}

{{ forms.textField({
    label: 'App Id For Instagram',
    instructions: 'Enter App Id from Instagram',
    id: 'appIdInst',
    name: 'appIdInst',
    value: settings['appIdInst']})
}}

{{ forms.textField({
    label: 'App Id Secret For Instagram',
    instructions: 'Enter App Id Secret from Instagram',
    id: 'appIdInstSecret',
    name: 'appIdInstSecret',
    value: settings['appIdInstSecret']})
}}
{{ forms.textField({
    label: 'App Id Secret For Facebook',
    instructions: 'Enter App Id Secret from Facebook',
    id: 'appIdFbSecret',
    name: 'appIdFbSecret',
    value: settings['appIdFbSecret']})
}}
